<Window x:Class="ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPicker"
        mc:Ignorable="d"
        Title="Color Chooser" 
        Height="900" Width="1200"
        MinHeight="700" MinWidth="900"
        WindowState="Maximized"
        Background="{StaticResource DarkBackground}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>        <!-- Header -->
            <RowDefinition Height="Auto"/>        <!-- Color Selection Controls -->
            <RowDefinition Height="*" MinHeight="350"/>  <!-- Main Content Area -->
            <RowDefinition Height="Auto" MinHeight="120"/>        <!-- Color Input Section -->
            <RowDefinition Height="Auto" MinHeight="100"/>        <!-- PNG Creation Section -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkSurfaceVariant}" 
                CornerRadius="8" 
                Padding="20,16" 
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Color Chooser" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource DarkText}"/>
                <TextBlock Text="Select named colors, pick custom colors, and export code in multiple programming languages" 
                           FontSize="16" 
                           Foreground="{StaticResource DarkTextSecondary}" 
                           Margin="0,8,0,0" 
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Color Selection Controls -->
        <Border Grid.Row="1" 
                Background="{StaticResource DarkSurface}" 
                CornerRadius="8" 
                Padding="20,16" 
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Category:" 
                           Foreground="{StaticResource DarkText}" 
                           FontSize="16" 
                           FontWeight="Medium"
                           VerticalAlignment="Center" 
                           Margin="0,0,12,0"/>
                <ComboBox x:Name="cboCategory" 
                          Grid.Column="1" 
                          Height="36"
                          VerticalAlignment="Center" 
                          SelectionChanged="CboCategory_SelectionChanged"/>

                <TextBlock Grid.Column="2" 
                           Text="Color:" 
                           Foreground="{StaticResource DarkText}" 
                           FontSize="16" 
                           FontWeight="Medium"
                           VerticalAlignment="Center" 
                           Margin="24,0,12,0"/>
                <ComboBox x:Name="cboColorName" 
                          Grid.Column="3" 
                          Height="36"
                          VerticalAlignment="Center" 
                          SelectionChanged="CboColorName_SelectionChanged"/>

                <TextBlock Grid.Column="4" 
                           Text="Format:" 
                           Foreground="{StaticResource DarkText}" 
                           FontSize="16" 
                           FontWeight="Medium"
                           VerticalAlignment="Center" 
                           Margin="24,0,12,0"/>
                <ComboBox x:Name="cboLanguage" 
                          Grid.Column="5" 
                          Height="36"
                          VerticalAlignment="Center" 
                          SelectionChanged="CboLanguage_SelectionChanged"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Color Display and Actions -->
            <Border Grid.Column="0" 
                    Background="{StaticResource DarkSurface}" 
                    CornerRadius="8" 
                    Padding="20,16" 
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Current Color" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource DarkText}" 
                               Margin="0,0,0,16"/>

                    <!-- Color Display -->
                    <Border Grid.Row="1"
                            x:Name="pnlColorDisplay" 
                            Width="240" 
                            Height="160" 
                            Background="White" 
                            BorderBrush="{StaticResource DarkBorder}" 
                            BorderThickness="2" 
                            CornerRadius="8"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20"/>

                    <!-- Spacer -->
                    <Border Grid.Row="2" MinHeight="10"/>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3">
                        <Button x:Name="btnColorPicker" 
                                Content="🎨 Color Picker Dialog" 
                                Height="44" 
                                Margin="0,0,0,12" 
                                Click="BtnColorPicker_Click"/>
                        
                        <Button x:Name="btnEyedropper" 
                                Content="🔍 Screen Eyedropper" 
                                Height="44" 
                                Click="BtnEyedropper_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel: Code Output -->
            <Border Grid.Column="1" 
                    Background="{StaticResource DarkSurface}" 
                    CornerRadius="8" 
                    Padding="20,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Generated Code" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource DarkText}" 
                               Margin="0,0,0,16"/>

                    <Border Grid.Row="1" 
                            Background="{StaticResource DarkBackground}" 
                            BorderBrush="{StaticResource DarkBorder}" 
                            BorderThickness="1" 
                            CornerRadius="6">
                        <TextBox x:Name="txtColorOutput"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 FontFamily="Consolas, 'Courier New', monospace"
                                 FontSize="14"
                                 Background="Transparent"
                                 Foreground="{StaticResource DarkText}"
                                 BorderThickness="0"
                                 Padding="16"
                                 VerticalAlignment="Top"
                                 VerticalContentAlignment="Top"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Color Input Section -->
        <Border Grid.Row="3" 
                Background="{StaticResource DarkSurface}" 
                CornerRadius="8" 
                Padding="20,16" 
                Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Find Named Color by Code" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource DarkText}" 
                           Margin="0,0,0,12"/>

                <TextBlock Grid.Row="1" 
                           Text="Enter hex color (#RRGGBB) or RGB values (R, G, B) to find the closest named color:" 
                           FontSize="14" 
                           Foreground="{StaticResource DarkTextSecondary}" 
                           Margin="0,0,0,12" 
                           TextWrapping="Wrap"/>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Input Row -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtColorInput" 
                                 Grid.Column="0" 
                                 Height="48"
                                 VerticalAlignment="Center" 
                                 Margin="0,0,12,0" 
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Left"
                                 Text="#FF0000"
                                 Style="{StaticResource DarkTextBoxStyle}"/>

                        <Button x:Name="btnGetCurrent" 
                                Grid.Column="1" 
                                Content="Get Current Color" 
                                Width="160" 
                                Height="48" 
                                Margin="0,0,12,0"
                                Click="BtnGetCurrent_Click"/>

                        <Button x:Name="btnFindColor" 
                                Grid.Column="2" 
                                Content="🔍 Find &amp; Set" 
                                Width="140" 
                                Height="48" 
                                Click="BtnFindColor_Click" 
                                Margin="0,0,12,0"/>

                        <Button x:Name="btnSetNearest" 
                                Grid.Column="3" 
                                Content="✓ Use Closest" 
                                Width="140" 
                                Height="48" 
                                Style="{StaticResource GreenButtonStyle}"
                                Click="BtnSetNearest_Click" 
                                IsEnabled="False"/>
                    </Grid>

                    <!-- Result Display -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource DarkBackground}" 
                            BorderBrush="{StaticResource DarkBorder}" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            MinHeight="40" 
                            Padding="16,12">
                        <TextBlock x:Name="lblResult" 
                                   Text="Enter a color code above to find the closest named color..." 
                                   Foreground="{StaticResource DarkTextSecondary}" 
                                   FontSize="14" 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- PNG Creation Section -->
        <Border Grid.Row="4" 
                Background="{StaticResource DarkSurface}" 
                CornerRadius="8" 
                Padding="20,16" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Export as PNG Image" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource DarkText}" 
                           Margin="0,0,0,12"/>

                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Width:" 
                               FontSize="14" 
                               Foreground="{StaticResource DarkText}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="numWidth" 
                             Grid.Column="1" 
                             Text="256"
                             Height="48"
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             Margin="0,0,16,0"
                             Style="{StaticResource DarkTextBoxStyle}"/>

                    <TextBlock Grid.Column="2" 
                               Text="Height:" 
                               FontSize="14" 
                               Foreground="{StaticResource DarkText}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="numHeight" 
                             Grid.Column="3" 
                             Text="256"
                             Height="48"
                             VerticalAlignment="Center" 
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             Margin="0,0,16,0"
                             Style="{StaticResource DarkTextBoxStyle}"/>

                    <Button x:Name="btnCreatePNG" 
                            Grid.Column="4" 
                            Content="💾 Create PNG" 
                            Width="140" 
                            Height="48" 
                            Style="{StaticResource CyanButtonStyle}"
                            Click="BtnCreatePNG_Click" 
                            VerticalAlignment="Center"/>
                </Grid>

                <Border Grid.Row="2" 
                        Background="{StaticResource DarkBackground}" 
                        BorderBrush="{StaticResource DarkBorder}" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        MinHeight="40" 
                        Padding="16,12">
                    <TextBlock x:Name="lblPngResult" 
                               Text="PNG will be saved to your chosen location with the current color." 
                               Foreground="{StaticResource DarkTextSecondary}" 
                               FontSize="14" 
                               VerticalAlignment="Center" 
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>